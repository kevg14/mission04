@{

    ViewData["Title"] = "Movie List";
}

@model List<MovieResponse>

<table class="table table-bordered">


    <thead>
        <tr>
            <td>category</td>
            <td>title</td>
            <td>year</td>
            <td>director</td>
            <td>rating</td>
            <td>edited</td>
            <td>lent</td>
            <td>note</td>

        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.category.Name</td>
            <td>@x.title</td>
            <td>@x.year</td>
            <td>@x.director</td>
            <td>@x.rating</td>
            <td>@x.edited</td>
            <td>@x.lent</td>
            <td>@x.note</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieId">Delete</a></td>
        </tr>

            }
    </tbody>


</table>