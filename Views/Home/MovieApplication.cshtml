@{
    ViewData["Title"] = "Movie Input";
}

@model mission04.Models.MovieResponse

    @*form that populates the tables*@
    <a asp-controller="Home" asp-action="MovieApplication">Fill Out Movie Application</a>
    <a asp-controller="Home" asp-action="Podcast">Podcasts Link</a>
    <h1>Fill Out Movie Attributes</h1>
    <div>
        <form method="post">
            <div>
                <label asp-for="CategoryId">Category:</label>
                <select asp-for="CategoryId" />
                @*<option value="">Select a category</option>*@

                    @foreach (Category c in ViewBag.Categories)
                    {
                        <option value="@c.CategoryId">@c.Name</option>

                    }
            </div>
            <br />
            <br />
            <br />
            <label asp-for="title">Title:</label>
            <input asp-for="title" />
            <br />

            <label asp-for="year">Year:</label>
            <input asp-for="year" />
            <br />

            <label asp-for="director">Director:</label>
            <input asp-for="director" />
            <br />

            <label asp-for="rating"></label>
            <select asp-for="rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="NR">NR</option>
                <option value="UR">UR</option>
            </select>

            <label asp-for="edited">Edited:</label>
            <select asp-for="edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br />

            <label asp-for="lent">Lent To:</label>
            <input asp-for="lent" />
            <br />


            <label asp-for="note">Notes:</label>
            <input asp-for="note" />
            <br />






            <button type="submit">Submit Movie</button>

            <div asp-validation-summary="All"></div>
        </form>


    </div>